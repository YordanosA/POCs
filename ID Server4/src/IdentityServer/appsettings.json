{
  "IdentityServer": {
    "IssuerUri": "urn:sso.company.com",
    "ApiResources": [
      {
        "Name": "Bandlay.API",
        "DisplayName": "Bandlay Core API",

        "Scopes": [
          {
            "Name": "Bandlay.API.full_access",
            "DisplayName": "Full access to Bandlay API"
          }
        ],

        "UserClaims": [
          {
            "Name": "JwtClaimTypes.Name",
            "Email": "JwtClaimTypes.Email"
          }
        ]
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
